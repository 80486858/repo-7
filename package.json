{
  "name": "dynamic-doctor",
  "version": "0.0.1",
  "bin": {
    "dynamic-doctor": "./dist/cjs/src/index.js"
  },
  "scripts": {
    "build": "rimraf dist && yarn build:cjs && yarn build:esm",
    "build:cjs": "rimraf dist/cjs && tsc -p tsconfig.cjs.json && yarn copy:templates:cjs",
    "build:esm": "rimraf dist/esm && tsc -p tsconfig.esm.json && yarn copy:templates:esm",
    "copy:templates:cjs": "cp -r ./src/templates ./dist/cjs/src/templates",
    "copy:templates:esm": "cp -r ./src/templates ./dist/esm/src/templates",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^10.0.1",
    "node-fetch": "2.6.12",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^3.0.1",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/jest": "^29.5.3",
    "@types/node-fetch": "^2.6.4",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "./dist/**/*",
    "./package.json"
  ],
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js"
}
