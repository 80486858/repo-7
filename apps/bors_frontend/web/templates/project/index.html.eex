<nav><div class=wrapper>
<h1>Repositories</h1>
</div></nav>

<main role=main><div class=wrapper>

<div class=toolbar>
  <a class=toolbar-item href="<%= BorsNG.Attrs.get_github_integration_url() %>">
    Add / Remove Repositories
  </a>
</div>

<table class="table">
  <tbody>
<%= for project <- @projects do %>
    <tr role=row>
      <td class="fill-link">
        <%= link project.name, to: project_path(@conn, :show, project) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

</div></main>
