#!/bin/sh
set -e
while [ ! -d script ] && [ `pwd` != / ]; do
  cd ..
done
if [ -z $BORS_WITHIN_DOCKER ]; then
  docker rm -f borsng-dev
  docker create --name borsng-dev --volume `pwd`:/home/user/bors-ng borsng/dev
  docker start borsng-dev
  exec docker exec -it borsng-dev "$0" "$@"
fi
mix do clean, deps.get, ecto.drop, ecto.create, ecto.migrate, build
npm install
